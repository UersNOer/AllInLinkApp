<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:layout_width="match_parent"
android:layout_height="match_parent">

<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:divider="@drawable/divider"
    android:showDividers="middle">

    <Space
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_vertical" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:divider="@drawable/input_divider"
        android:showDividers="middle"
        android:background="@drawable/bg_rect_white_normal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/padding_horizontal"
            android:paddingRight="@dimen/padding_horizontal"
            android:paddingTop="10dp"
            android:paddingBottom="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="@dimen/padding_horizontal"
                android:gravity="center|right"
                android:text="案件类别"
                android:textColor="@color/darken"
                android:textSize="@dimen/text_size_normal" />

            <com.example.android_supervisor.ui.view.FocusedTextView
                android:id="@+id/tv_event_new_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:gravity="center_vertical"
                android:drawableRight="@drawable/enter"
                android:drawablePadding="10dp"
                android:singleLine="true"
                android:ellipsize="marquee"
                android:hint="请选择"
                android:textColorHint="@color/text_hint"
                android:textColor="@color/gray"
                android:textSize="@dimen/text_size_normal"
                android:background="@drawable/bg_text_editor_normal"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp"
            android:paddingLeft="@dimen/padding_horizontal"
            android:paddingRight="@dimen/padding_horizontal"
            android:paddingTop="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="@dimen/padding_horizontal"
                android:gravity="center|right"
                android:text="案件大类"
                android:textColor="@color/darken"
                android:textSize="@dimen/text_size_normal" />

            <com.example.android_supervisor.ui.view.FocusedTextView
                android:id="@+id/tv_event_new_big"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_text_editor_normal"
                android:drawablePadding="10dp"
                android:drawableRight="@drawable/enter"
                android:ellipsize="marquee"
                android:gravity="center_vertical"
                android:hint="请选择类别"
                android:padding="8dp"
                android:singleLine="true"
                android:clickable="false"
                android:textColor="@color/gray"
                android:textColorHint="@color/text_hint"
                android:textSize="@dimen/text_size_normal" />
        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp"
            android:paddingLeft="@dimen/padding_horizontal"
            android:paddingRight="@dimen/padding_horizontal"
            android:paddingTop="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="@dimen/padding_horizontal"
                android:gravity="center|right"
                android:text="案件小类"
                android:textColor="@color/darken"
                android:textSize="@dimen/text_size_normal" />

            <com.example.android_supervisor.ui.view.FocusedTextView
                android:id="@+id/tv_event_new_small"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_text_editor_normal"
                android:drawablePadding="10dp"
                android:drawableRight="@drawable/enter"
                android:ellipsize="marquee"
                android:gravity="center_vertical"
                android:hint="请选择类别"
                android:padding="8dp"
                android:clickable="false"
                android:singleLine="true"
                android:textColor="@color/gray"
                android:textColorHint="@color/text_hint"
                android:textSize="@dimen/text_size_normal" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/padding_horizontal"
            android:paddingRight="@dimen/padding_horizontal"
            android:paddingTop="10dp"
            android:paddingBottom="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="@dimen/padding_horizontal"
                android:gravity="center|right"
                android:text="立案标准"
                android:textColor="@color/darken"
                android:textSize="@dimen/text_size_normal" />

            <com.example.android_supervisor.ui.view.FocusedTextView
                android:id="@+id/tv_event_new_standard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:padding="8dp"
                android:drawableRight="@drawable/enter"
                android:drawablePadding="10dp"
                android:singleLine="true"
                android:ellipsize="marquee"
                android:hint="请选择"
                android:textColorHint="@color/text_hint"
                android:textColor="@color/gray"
                android:textSize="@dimen/text_size_normal"
                android:background="@drawable/bg_text_editor_normal"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/padding_horizontal"
            android:paddingRight="@dimen/padding_horizontal"
            android:paddingTop="10dp"
            android:paddingBottom="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="@dimen/padding_horizontal"
                android:gravity="center|right"
                android:text="案件类型"
                android:textColor="@color/darken"
                android:textSize="@dimen/text_size_normal" />

            <com.example.android_supervisor.ui.view.OptionalTextView
                android:id="@+id/tv_event_new_caseType"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:padding="8dp"
                android:drawableRight="@drawable/enter"
                android:drawablePadding="10dp"
                android:singleLine="true"
                android:ellipsize="marquee"
                android:hint="请选择案件类型"
                android:textColorHint="@color/text_hint"
                android:textColor="@color/gray"
                android:textSize="@dimen/text_size_normal"
                android:background="@drawable/bg_text_editor_normal"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/padding_horizontal"
            android:paddingRight="@dimen/padding_horizontal"
            android:paddingTop="10dp"
            android:paddingBottom="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="@dimen/padding_horizontal"
                android:gravity="center|left"
                android:text="事发位置"
                android:layout_weight="1"
                android:textColor="@color/darken"

                android:textSize="@dimen/text_size_normal" />

            <ImageView
                android:id="@+id/iv_enterMap"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/location_marker"
                android:layout_gravity="center_vertical"
                />



            <com.example.android_supervisor.ui.view.FocusedTextView
                android:id="@+id/tv_event_new_positions"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:padding="8dp"
                android:visibility="gone"
                android:drawableRight="@drawable/enter"
                android:drawablePadding="10dp"
                android:singleLine="true"
                android:ellipsize="marquee"
                android:hint="请选择"
                android:textColorHint="@color/text_hint"
                android:textColor="@color/gray"
                android:textSize="@dimen/text_size_normal"
                android:background="@drawable/bg_text_editor_normal"/>
        </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/padding_horizontal"
            android:paddingRight="@dimen/padding_horizontal">

            <EditText
                android:id="@+id/et_event_new_position"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="top"
                android:padding="8dp"
                android:hint="请输入案件具体位置(限定在1~200字) "
                android:maxLines="4"
                android:lines="4"
                android:maxLength="200"
                android:textColor="@color/gray"
                android:textColorHint="@color/text_hint"
                android:textSize="15sp"
                android:background="@drawable/bg_text_editor"/>

            <TextView
                android:id="@+id/btn_event_new_desc_record1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|bottom"
                android:src="@drawable/ic_record"
                android:layout_margin="5dp"
                android:text="0-200"
                />
        </FrameLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/padding_horizontal"
            android:paddingRight="@dimen/padding_horizontal"
            android:paddingTop="10dp"
            android:paddingBottom="10dp">

            <TextView
                android:id="@+id/tv_showCoordinate"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="@dimen/padding_horizontal"
                android:gravity="center|left"
                android:text="坐标位置"
                android:layout_weight="1"
                android:textColor="@color/text_hint"

                android:textSize="@dimen/text_size_xsmall" />

            <ImageView
                android:id="@+id/iv_recordMap"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_record"
                android:layout_gravity="center_vertical"
                />
        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/padding_horizontal"
            android:paddingRight="@dimen/padding_horizontal"
            android:paddingTop="10dp"
            android:paddingBottom="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="@dimen/padding_horizontal"
                android:gravity="center|right"
                android:text="问题描述"
                android:textColor="@color/darken"
                android:textSize="@dimen/text_size_normal" />

        </LinearLayout>




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/padding_horizontal"
            android:paddingRight="@dimen/padding_horizontal"
            android:paddingTop="10dp"
            android:paddingBottom="10dp">


            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/et_event_new_desc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="top"
                    android:padding="8dp"
                    android:hint="请输入案件描述(1~200字) 例如：**街道**大厦楼下有烧烤摆摊现象"
                    android:maxLines="5"
                    android:lines="4"
                    android:maxLength="200"
                    android:textColor="@color/gray"
                    android:textColorHint="@color/text_hint"
                    android:textSize="15sp"
                    android:background="@drawable/bg_text_editor"/>

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/btn_event_new_desc_record"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="right|bottom"
                    android:src="@drawable/ic_record"
                    android:layout_margin="5dp"
                    app:maxImageSize="14dp"
                    app:fabCustomSize="24dp"
                    app:tint="@color/white"
                    app:backgroundTint="@color/blue" />
            </FrameLayout>
        </LinearLayout>
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/choose_recycler"
        android:layout_width="match_parent"
        android:visibility="gone"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="@dimen/t38"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center|right"
        android:paddingBottom="10dp"
        android:paddingLeft="@dimen/padding_horizontal"
        android:paddingRight="@dimen/padding_horizontal"
        android:paddingTop="10dp"
        android:text="处理前"
        android:textColor="@color/darken"
        android:textSize="@dimen/text_size_normal" />

    <com.example.android_supervisor.ui.media.MediaUploadGridView
        android:id="@+id/gv_event_new_attaches"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginRight="@dimen/padding_horizontal"
        android:gravity="center|right"
        android:paddingBottom="10dp"
        android:paddingLeft="@dimen/padding_horizontal"
        android:paddingRight="@dimen/padding_horizontal"
        android:paddingTop="10dp"
        android:text="处理后"
        android:textColor="@color/darken"
        android:textSize="@dimen/text_size_normal" />

    <com.example.android_supervisor.ui.media.MediaUploadGridView
        android:id="@+id/gv_event_later_attaches"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:paddingTop="@dimen/padding_vertical"
        android:paddingBottom="@dimen/padding_vertical"
        android:clipToPadding="false">

        <Button
            android:id="@+id/btn_event_new_submit"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/button_round_blue"
            android:text="提 交"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_large" />
    </LinearLayout>
</LinearLayout>
</ScrollView>
