<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:divider="@drawable/divider"
        android:showDividers="beginning|middle|end"
        android:paddingTop="@dimen/padding_vertical"
        android:paddingBottom="@dimen/padding_vertical">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:showDividers="middle"
            android:divider="@drawable/input_divider"
            android:background="@drawable/bg_rect_white">

            <TableRow
                android:paddingLeft="@dimen/padding_horizontal"
                android:paddingRight="@dimen/padding_horizontal"
                android:paddingTop="@dimen/padding_vertical"
                android:paddingBottom="@dimen/padding_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/padding_horizontal"
                    android:gravity="right"
                    android:text="任务编号"
                    android:textColor="@color/darken"
                    android:textSize="@dimen/text_size_normal" />

                <TextView
                    android:id="@+id/tv_census_info_code"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    tools:text="201903291619"
                    android:textColor="@color/gray"
                    android:textColorHint="@color/gray"
                    android:textSize="@dimen/text_size_normal" />
            </TableRow>

            <TableRow
                android:paddingLeft="@dimen/padding_horizontal"
                android:paddingRight="@dimen/padding_horizontal"
                android:paddingTop="@dimen/padding_vertical"
                android:paddingBottom="@dimen/padding_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/padding_horizontal"
                    android:gravity="right"
                    android:text="任务名称"
                    android:textColor="@color/darken"
                    android:textSize="@dimen/text_size_normal" />

                <TextView
                    android:id="@+id/tv_census_info_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    tools:text="市民上报"
                    android:textColor="@color/gray"
                    android:textColorHint="@color/gray"
                    android:textSize="@dimen/text_size_normal" />
            </TableRow>

            <TableRow
                android:paddingLeft="@dimen/padding_horizontal"
                android:paddingRight="@dimen/padding_horizontal"
                android:paddingTop="@dimen/padding_vertical"
                android:visibility="gone"
                android:paddingBottom="@dimen/padding_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/padding_horizontal"
                    android:gravity="right"
                    android:text="任务类型"
                    android:textColor="@color/darken"
                    android:textSize="@dimen/text_size_normal" />

                <TextView
                    android:id="@+id/tv_census_info_tasktype"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    tools:text="乱扔垃圾"
                    android:textColor="@color/gray"
                    android:textColorHint="@color/gray"
                    android:textSize="@dimen/text_size_normal" />
            </TableRow>

            <TableRow
                android:paddingLeft="@dimen/padding_horizontal"
                android:paddingRight="@dimen/padding_horizontal"
                android:paddingTop="@dimen/padding_vertical"
                android:paddingBottom="@dimen/padding_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/padding_horizontal"
                    android:gravity="right"
                    android:text="任务类别"
                    android:textColor="@color/darken"
                    android:textSize="@dimen/text_size_normal" />

                <TextView
                    android:id="@+id/tv_census_info_type"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    tools:text="乱扔垃圾"
                    android:textColor="@color/gray"
                    android:textColorHint="@color/gray"
                    android:textSize="@dimen/text_size_normal" />
            </TableRow>

            <TableRow
                android:paddingLeft="@dimen/padding_horizontal"
                android:paddingRight="@dimen/padding_horizontal"
                android:paddingTop="@dimen/padding_vertical"
                android:paddingBottom="@dimen/padding_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/padding_horizontal"
                    android:gravity="right"
                    android:text="开始时间"
                    android:textColor="@color/darken"
                    android:textSize="@dimen/text_size_normal" />

                <TextView
                    android:id="@+id/tv_census_info_begin_time"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    tools:text="2019-03-29 16:28:55"
                    android:textColor="@color/gray"
                    android:textColorHint="@color/gray"
                    android:textSize="@dimen/text_size_normal" />
            </TableRow>

            <TableRow
                android:paddingLeft="@dimen/padding_horizontal"
                android:paddingRight="@dimen/padding_horizontal"
                android:paddingTop="@dimen/padding_vertical"
                android:paddingBottom="@dimen/padding_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/padding_horizontal"
                    android:gravity="right"
                    android:text="结束时间"
                    android:textColor="@color/darken"
                    android:textSize="@dimen/text_size_normal" />

                <TextView
                    android:id="@+id/tv_census_info_end_time"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    tools:text="2019-03-29 16:28:55"
                    android:textColor="@color/gray"
                    android:textColorHint="@color/gray"
                    android:textSize="@dimen/text_size_normal" />
            </TableRow>

            <TableRow
                android:paddingLeft="@dimen/padding_horizontal"
                android:paddingRight="@dimen/padding_horizontal"
                android:paddingTop="@dimen/padding_vertical"
                android:paddingBottom="@dimen/padding_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/padding_horizontal"
                    android:gravity="right"
                    android:text="任务区域"
                    android:textColor="@color/darken"
                    android:textSize="@dimen/text_size_normal" />

                <TextView
                    android:id="@+id/tv_census_info_area"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    tools:text="湖南省/长沙市/岳麓区"
                    android:textColor="@color/gray"
                    android:textColorHint="@color/gray"
                    android:textSize="@dimen/text_size_normal" />
            </TableRow>

            <TableRow
                android:paddingLeft="@dimen/padding_horizontal"
                android:paddingRight="@dimen/padding_horizontal"
                android:paddingTop="@dimen/padding_vertical"
                android:paddingBottom="@dimen/padding_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/padding_horizontal"
                    android:gravity="right"
                    android:text="任务描述"
                    android:textColor="@color/darken"
                    android:textSize="@dimen/text_size_normal" />

                <TextView
                    android:id="@+id/tv_census_info_desc"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    tools:text="案件描述"
                    android:textColor="@color/gray"
                    android:textColorHint="@color/gray"
                    android:textSize="@dimen/text_size_normal" />
            </TableRow>

            <TableRow
                android:paddingLeft="@dimen/padding_horizontal"
                android:paddingRight="@dimen/padding_horizontal"
                android:paddingTop="@dimen/padding_vertical"
                android:paddingBottom="@dimen/padding_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/padding_horizontal"
                    android:gravity="right"
                    android:text="任务人员"
                    android:textColor="@color/darken"
                    android:textSize="@dimen/text_size_normal" />

                <TextView
                    android:id="@+id/tv_census_info_people"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    tools:text="案件描述"
                    android:textColor="@color/gray"
                    android:textColorHint="@color/gray"
                    android:textSize="@dimen/text_size_normal" />
            </TableRow>
        </TableLayout>
    </LinearLayout>
</ScrollView>