<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.android_supervisor.ui.MainActivity">

    <FrameLayout
        android:id="@+id/main_fragment_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/divider_color" />

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/main_bottom_tab_layout"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        app:tabIndicatorHeight="0dp"
        app:tabBackground="@drawable/bg_rect_white"
        app:tabRippleColor="@android:color/transparent">

        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="主页"
            android:icon="@drawable/ic_home_fill"
            android:layout="@layout/bottom_tab_item"/>

        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="消息"
            android:icon="@drawable/ic_msg"
            android:layout="@layout/bottom_tab_item"/>

        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="地图"
            android:icon="@drawable/ic_map"
            android:layout="@layout/bottom_tab_item"/>

        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="设置"
            android:icon="@drawable/ic_set"
            android:layout="@layout/bottom_tab_item"/>
    </com.google.android.material.tabs.TabLayout>
</LinearLayout>
