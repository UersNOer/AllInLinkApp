<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="@drawable/divider"
        android:orientation="vertical"
        android:showDividers="middle">

        <Space
            android:layout_width="match_parent"
            android:layout_height="@dimen/space_width" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_rect_white_normal"
            android:orientation="vertical"
            android:paddingBottom="@dimen/padding_vertical"
            android:paddingLeft="@dimen/padding_horizontal"
            android:paddingRight="@dimen/padding_horizontal"
            android:paddingTop="@dimen/padding_vertical"
            android:stretchColumns="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <FrameLayout
                    android:layout_width="60dp"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_gravity="right"
                        android:drawableLeft="@drawable/verifier"
                        android:drawablePadding="3dp"
                        android:gravity="center"
                        android:text="登录名"
                        android:textColor="@color/darken"
                        android:textSize="@dimen/text_size_xsmall" />
                </FrameLayout>

                <com.xw.repo.xedittext.XEditText
                    app:x_disableEmoji="true"
                    android:id="@+id/et_register_username"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginLeft="@dimen/padding_horizontal"
                    android:background="@drawable/bg_text_editor"
                    android:hint="请输入登录名"
                    android:maxLength="20"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:singleLine="true"
                    android:textColor="@color/blue"
                    android:textColorHint="@color/text_hint"
                    android:textSize="@dimen/text_size_normal"
                    android:theme="@style/LoginEditTextStyle" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_vertical"
                android:orientation="horizontal">

                <FrameLayout
                    android:layout_width="60dp"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_gravity="right"

                        android:drawableLeft="@drawable/verifier"
                        android:drawablePadding="3dp"
                        android:gravity="center"
                        android:text="密码"
                        android:textColor="@color/darken"
                        android:textSize="@dimen/text_size_xsmall" />
                </FrameLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginLeft="@dimen/padding_horizontal">

                    <EditText
                        android:id="@+id/et_register_password"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="@drawable/bg_text_editor"
                        android:hint="请输入密码"
                        android:inputType="textPassword"
                        android:maxLength="20"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:singleLine="true"
                        android:textColor="@color/blue"
                        android:textColorHint="@color/text_hint"
                        android:textSize="@dimen/text_size_normal"
                        android:theme="@style/LoginEditTextStyle" />

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/iv_register_show_password"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_alignParentRight="true"
                        android:scaleType="centerInside"
                        android:src="@drawable/ic_pwd_show"
                        app:tint="@color/gray_light" />
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_vertical"
                android:orientation="horizontal">

                <FrameLayout
                    android:layout_width="60dp"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_gravity="right"

                        android:drawableLeft="@drawable/verifier"
                        android:drawablePadding="3dp"
                        android:gravity="center"
                        android:text="确认密码"
                        android:textColor="@color/darken"
                        android:textSize="@dimen/text_size_xsmall" />
                </FrameLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginLeft="@dimen/padding_horizontal">

                    <EditText
                        android:id="@+id/et_register_password2"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="@drawable/bg_text_editor"
                        android:hint="请再次输入确认密码"
                        android:inputType="textPassword"
                        android:maxLength="20"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:singleLine="true"
                        android:textColor="@color/blue"
                        android:textColorHint="@color/text_hint"
                        android:textSize="@dimen/text_size_normal"
                        android:theme="@style/LoginEditTextStyle" />

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/iv_register_show_password2"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_alignParentRight="true"
                        android:scaleType="centerInside"
                        android:src="@drawable/ic_pwd_show"
                        app:tint="@color/gray_light" />
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_vertical"
                android:orientation="horizontal">

                <FrameLayout
                    android:layout_width="60dp"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"

                        android:layout_gravity="right"
                        android:drawableLeft="@drawable/verifier"
                        android:drawablePadding="3dp"
                        android:gravity="center"
                        android:text="姓名"
                        android:textColor="@color/darken"
                        android:textSize="@dimen/text_size_xsmall" />
                </FrameLayout>

                <EditText
                    android:id="@+id/et_register_nickname"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginLeft="@dimen/padding_horizontal"
                    android:background="@drawable/bg_text_editor"
                    android:hint="请输入真实姓名"
                    android:maxLength="50"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:singleLine="true"
                    android:textColor="@color/blue"
                    android:textColorHint="@color/text_hint"
                    android:textSize="@dimen/text_size_normal"
                    android:theme="@style/LoginEditTextStyle" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_vertical"
                android:orientation="horizontal">

                <FrameLayout
                    android:layout_width="60dp"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_gravity="right"
                        android:drawableLeft="@drawable/verifier"
                        android:drawablePadding="3dp"
                        android:gravity="center"
                        android:text="性别"
                        android:textColor="@color/darken"
                        android:textSize="@dimen/text_size_xsmall" />
                </FrameLayout>

                <TextView
                    android:id="@+id/et_register_gender"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginLeft="@dimen/padding_horizontal"
                    android:background="@drawable/bg_text_editor"
                    android:drawableRight="@drawable/enter"
                    android:gravity="center_vertical"
                    android:hint="请选择性别"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:singleLine="true"
                    android:textColor="@color/blue"
                    android:textColorHint="@color/text_hint"
                    android:textSize="@dimen/text_size_normal"
                    android:theme="@style/LoginEditTextStyle" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_vertical"
                android:orientation="horizontal">

                <FrameLayout
                    android:layout_width="60dp"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_gravity="right"
                        android:drawableLeft="@drawable/verifier"
                        android:drawablePadding="3dp"
                        android:gravity="center"
                        android:text="部门"
                        android:textColor="@color/darken"
                        android:textSize="@dimen/text_size_xsmall" />
                </FrameLayout>

                <TextView
                    android:id="@+id/et_register_depart"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginLeft="@dimen/padding_horizontal"
                    android:background="@drawable/bg_text_editor"
                    android:drawableRight="@drawable/enter"
                    android:gravity="center_vertical"
                    android:hint="请选择所在部门"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:singleLine="true"
                    android:textColor="@color/blue"
                    android:textColorHint="@color/text_hint"
                    android:textSize="@dimen/text_size_normal"
                    android:theme="@style/LoginEditTextStyle" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_vertical"
                android:orientation="horizontal">

                <FrameLayout
                    android:layout_width="60dp"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_gravity="right"
                        android:gravity="center"
                        android:text="身份证"
                        android:textColor="@color/darken"
                        android:textSize="@dimen/text_size_xsmall" />
                </FrameLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginLeft="@dimen/padding_horizontal">

                    <EditText
                        android:id="@+id/et_register_cardid"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="@drawable/bg_text_editor"
                        android:hint="请输入身份证号码"
                        android:maxLength="18"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:singleLine="true"
                        android:textColor="@color/blue"
                        android:textColorHint="@color/text_hint"
                        android:textSize="@dimen/text_size_normal"
                        android:theme="@style/LoginEditTextStyle" />

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/iv_register_cardid_scan"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_alignParentRight="true"
                        android:scaleType="centerInside"
                        android:src="@drawable/ic_scan"
                        app:tint="@color/blue" />
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_vertical"
                android:orientation="horizontal">

                <FrameLayout
                    android:layout_width="60dp"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_gravity="right"
                        android:drawableLeft="@drawable/verifier"
                        android:drawablePadding="3dp"
                        android:gravity="center"
                        android:text="手机号"
                        android:textColor="@color/darken"
                        android:textSize="@dimen/text_size_xsmall" />
                </FrameLayout>

                <EditText
                    android:id="@+id/et_register_mobile"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginLeft="@dimen/padding_horizontal"
                    android:background="@drawable/bg_text_editor"
                    android:hint="请输入手机号码"
                    android:inputType="number"
                    android:maxLength="11"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:singleLine="true"
                    android:textColor="@color/blue"
                    android:textColorHint="@color/text_hint"
                    android:textSize="@dimen/text_size_normal"
                    android:theme="@style/LoginEditTextStyle" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_vertical"
                android:orientation="horizontal"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:gravity="center|right"
                    android:text="验证码"
                    android:textColor="@color/darken"
                    android:textSize="@dimen/text_size_normal" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginLeft="@dimen/padding_horizontal">

                    <EditText
                        android:id="@+id/et_register_vcode"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/bg_text_editor"
                        android:hint="请输入验证码"
                        android:inputType="number"
                        android:maxLength="6"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:singleLine="true"
                        android:textColor="@color/blue"
                        android:textColorHint="@color/text_hint"
                        android:textSize="@dimen/text_size_normal"
                        android:theme="@style/LoginEditTextStyle" />

                    <com.example.android_supervisor.ui.view.CountDownButton
                        android:layout_width="wrap_content"
                        android:layout_height="28dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="6dp"
                        android:background="@drawable/button_rect_blue"
                        android:text="获取验证码"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_size_xsmall"
                        app:cdFinishText="获取验证码"
                        app:countDown="30000"
                        app:countDownFormat="%d秒后重发"
                        app:countDownInterval="1000"
                        app:enableCountDown="true" />

                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>

        <Button
            android:id="@+id/btn_register"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_margin="20dp"
            android:background="@drawable/button_round_blue"
            android:text="注 册"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_large" />
    </LinearLayout>
</ScrollView>
