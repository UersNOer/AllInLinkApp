<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".ui.LeaveManagerActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:layout_marginLeft="15dp"
            android:text="*"
            android:textColor="#ff0000"
            android:textSize="16sp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="请假类型"
            android:textColor="#333333"
            android:textSize="16sp"
            android:layout_marginLeft="4dp"
            />
        <LinearLayout
            android:id="@+id/llType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/shape_edit_stroke"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tvType"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp"
                android:hint="请选择请假类型"
                android:gravity="center_vertical"
                />
            <ImageView
                android:id="@+id/ivEnterType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="15dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/enter"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:layout_marginLeft="15dp"
            android:text="*"
            android:textColor="#ff0000"
            android:textSize="16sp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="开始时间"
            android:textColor="#333333"
            android:textSize="16sp"
            android:layout_marginLeft="4dp"
            />
        <LinearLayout
            android:id="@+id/llStartTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/shape_edit_stroke"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tvStartTime"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp"
                android:hint="请选择开始时间"
                android:gravity="center_vertical"
                />
            <ImageView
                android:id="@+id/ivEnterStart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="15dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/enter"/>

        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:layout_marginLeft="15dp"
            android:text="*"
            android:textColor="#ff0000"
            android:textSize="16sp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="结束时间"
            android:textColor="#333333"
            android:textSize="16sp"
            android:layout_marginLeft="4dp"
            />
        <LinearLayout
            android:id="@+id/llEndTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/shape_edit_stroke"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tvEndTime"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp"
                android:hint="请选择结束时间"
                android:gravity="center_vertical"
                />
            <ImageView
                android:id="@+id/ivEnterEnd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="15dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/enter"/>

        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:layout_marginLeft="15dp"
            android:text="*"
            android:textColor="#ff0000"
            android:textSize="16sp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="请假时长"
            android:textColor="#333333"
            android:textSize="16sp"
            android:layout_marginLeft="4dp"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/shape_edit_stroke"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tvDayNum"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp"
                android:hint=""
                android:gravity="center_vertical"
                />
            <ImageView
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="15dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/enter"/>

        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:textSize="16sp"
            android:textColor="#333333"
            android:text="天"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:minHeight="50dp"
        android:focusableInTouchMode="true"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:layout_marginLeft="15dp"
            android:text="*"
            android:visibility="invisible"
            android:layout_gravity="center_vertical"
            android:textColor="#ff0000"
            android:textSize="16sp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="请假事由"
            android:textColor="#333333"
            android:textSize="16sp"
            android:layout_marginLeft="4dp"
            />

        <EditText
            android:id="@+id/etReason"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="20dp"
            android:minHeight="50dp"
            android:hint="请输入请假理由"
            android:textSize="15sp"
            android:textColor="#333333"
            android:textColorHighlight="#999999"
            android:gravity="top"
            android:padding="5dp"
            android:background="@drawable/shape_edit_stroke"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="60dp"
        android:gravity="center"
        >
        <TextView
            android:id="@+id/tvSubmit"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:text="提交申请"
            android:textSize="15sp"
            android:background="@drawable/shape_bluebutton"
            android:gravity="center"
            android:textColor="@color/white"/>
        <TextView
            android:id="@+id/tvReset"
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:text="重置"
            android:textSize="15sp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/shape_edit_stroke"
            android:gravity="center"
            android:textColor="#333333"/>
    </LinearLayout>
</LinearLayout>